# Node, vendor, IDE, environment files
/node_modules
/vendor
/.idea
/.vagrant
npm-debug.log
.env
Homestead.json
Homestead.yaml

# Laravel storage – ignore all files inside storage
/storage/*

# Keep required folders for Laravel
!/storage/app
!/storage/app/public
!/storage/framework
!/storage/framework/cache
!/storage/framework/sessions
!/storage/framework/views
!/storage/logs

# Keep empty folder placeholders for storage
!/storage/app/.gitkeep
!/storage/app/public/.gitkeep
!/storage/framework/.gitkeep
!/storage/framework/cache/.gitkeep
!/storage/framework/sessions/.gitkeep
!/storage/framework/views/.gitkeep
!/storage/logs/.gitkeep

# Ignore any key files
/storage/*.key

# Public folder – track everything inside (CSS, JS, images, uploads, etc.)
/public/*

# Optional: keep .gitkeep for public folder root if empty
!/public/.gitkeep

